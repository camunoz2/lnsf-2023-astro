---
import DesktopNavMenu from "./DesktopNavMenu.astro";
import MobileNavMenu from "./MobileNavMenu.astro";

const pathnameFirstSegment = Astro.url.pathname.split("/")[1];
---

<div class="container mx-auto px-4 py-6">
  <MobileNavMenu pathName={pathnameFirstSegment} />

  <DesktopNavMenu pathName={pathnameFirstSegment} />
</div>
