---
import logo from "../images/logo.png";
import { MENU_ITEMS } from "../config/menuItems";
import type { Config } from "../models/config";

const apiEndpoint = import.meta.env.HYGRAPH_ENDPOINT;

const query = {
  method: "POST",
  headers: { "Content-Type": "application/json" },
  body: JSON.stringify({
    query: `
        {
          config(where: {id: "cle00dunc3ikr0bkm271oym1e"}) {
            id
            instagram
            facebook
          }
        }`,
  }),
};
const response = await fetch(apiEndpoint, query);
const json = await response.json();

const config: Config = json.data.config;
---

<div class="container mx-auto px-4 py-6">
  <div class="hidden md:flex justify-between items-center">
    <div class="flex gap-4 items-center">
      <img width={65} height={66} src={logo} alt="logo lnsf" />
      <div class="flex flex-col">
        <p class="font-bold">Liceo Bicentenario</p>
        <p>Nibaldo Sepulveda Fern√°ndez</p>
      </div>
    </div>

    <nav>
      <ul class="flex gap-2 text-gray-400">
        {
          MENU_ITEMS.map((item) => (
            <li
              class={
                item.selected
                  ? "text-lnsf-blue font-bold cursor-pointer"
                  : "cursor-pointer hover:text-lnsf-blue"
              }
            >
              {item.title}
            </li>
          ))
        }
        <li>
          <a href={config.instagram}>
            <img width={23} src="/igLogo.svg" alt="instagram logo" />
          </a>
        </li>
        <li>
          <a href={config.facebook}>
            <img width={23} src="/fbLogo.svg" alt="facebook logo" />
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>
