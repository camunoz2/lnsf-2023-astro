---
interface Props {
  title: string;
  info: string;
  icon: string;
}

const { title, info, icon } = Astro.props;
---

<div class="flex gap-2">
  <img class="object-contain" src={icon} alt="" />
  <div class="flex flex-col">
    <h5 class="font-bold">{title}</h5>
    <p class="text-lnsf-light-text">{info}</p>
  </div>
</div>
