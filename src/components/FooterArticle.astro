---
import type { ImageAsset } from "../models/blogPost";
import { formatDate } from "../utils";

interface Props {
  title: string;
  dateAndTime: string;
  image: ImageAsset;
  link: string;
}

const { title, dateAndTime, image, link } = Astro.props;
---

<a href={`/noticias/${link}`} class="flex gap-2">
  <div class="rounded-md bg-lnsf-light-text w-28 h-20 overflow-hidden">
    <img class="object-cover w-full h-full" src={image.url} alt="" />
  </div>
  <div class="flex flex-col justify-center">
    <p class="text-2xl">{title}</p>
    <div class="flex gap-2">
      <img src="/svgCalendar.png" class="w-3 object-contain" alt="" />
      <p class="text-sm">{formatDate(dateAndTime)}</p>
    </div>
  </div>
</a>
