---
import Footer from "../../components/Footer.astro";
import SingleNews from "../../components/SingleNews.astro";
import TextTitle from "../../components/TextTitle.astro";
import Layout from "../../layouts/Layout.astro";
import { getAllBlogPosts } from "../../services/getBlogPosts";
import { optimizeImageForThumbnail } from "../../utils/imageOptimization";

export async function getStaticPaths({ paginate }) {
  const blogPosts = await getAllBlogPosts();
  return paginate(blogPosts, { pageSize: 5 });
}

const { page } = Astro.props;
---

<Layout title="Noticias" ogImage="/header_img.jpg">
  <div class="container mx-auto px-4">
    <div class="my-10">
      <TextTitle
        overTitle="Nuestras"
        title="Noticas "
        gradientText="recientes"
        description="Mantente informado del acontecer de nuestra instituciÃ³n"
      />
    </div>

    <h2 class="text-4xl text-lnsf-blue font-extrabold mb-10">Noticias</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {
        page.data.map((blog) => {
          // Optimizar la imagen para thumbnail
          const optimizedImage = optimizeImageForThumbnail(blog.featuredImage.url, 400, 225);
          
          return (
            <SingleNews
              title={blog.title}
              date={blog.dateAndTime}
              image={optimizedImage}
              link={blog.slug}
              categories={blog.category}
            />
          );
        })
      }
    </div>
    <div class="flex items-center justify-center gap-4 py-4">
      {
        page.url.prev ? (
          <a class="underline" href={page.url.prev}>
            Anterior
          </a>
        ) : null
      }
      {
        page.url.next ? (
          <a class="underline" href={page.url.next}>
            Siguiente
          </a>
        ) : null
      }
    </div>
    <Footer />
  </div>
</Layout>
